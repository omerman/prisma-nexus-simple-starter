// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id      Int       @id @default(autoincrement())
  title   String
  Comment Comment[]
}

model Comment {
  id     Int    @id @default(autoincrement())
  info   String
  postId Int
  post   Post   @relation(fields: [postId], references: [id])
}
